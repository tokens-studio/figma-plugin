{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "dist",
    "jsx": "react",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "paths": {
      "@emotion/core": ["./emotion.d.ts"],
      "@/*": [
        "src/*"
      ]
    },
  },
  "exclude": [
    "**/node_modules",
    "./storybook",
    "storybook-static"
  ],
  "include": [
    "css.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}