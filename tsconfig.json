{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "dist",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
  },
  "exclude": [
    "**/node_modules",
  ],
  "include": [
    "scripts/bundle.ts",
  ]
}
