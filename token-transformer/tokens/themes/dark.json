{
  "theme": {
    "background": {
      "value": "{colors.gray.900}",
      "description": "Alias value",
      "type": "color"
    },
    "backgroundSubtle": {
      "value": "rgba({colors.gray.900}, 0.5)",
      "description": "Nested color value",
      "type": "color"
    },
    "backgroundDark": {
      "value": "{colors.gray.500}",
      "description": "Darkened color value",
      "type": "color",
      "$extensions": {
        "modify": {
          "type": "darken",
          "amount": 0.5,
          "space": "hsl"
        }
      }
    },
    "size": {
      "default": {
        "value": "{sizing.base}",
        "description": "Sizing value",
        "type": "sizing"
      }
    },
    "components": {
      "cards": {
        "default": {
          "type": "composition",
          "value": {
            "borderRadius": "{sizing.base}",
            "fill": "{theme.backgroundSubtle}",
            "border": "{theme.background}"
          }
        }
      }
    }
  }
}
